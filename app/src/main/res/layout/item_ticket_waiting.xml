<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_TieudeTicketWating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tieu de" />

            <TextView
                android:id="@+id/tv_NoidungTkWating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_TieudeTicketWating"
                android:text="Noi dung" />

            <TextView
                android:id="@+id/tv_LoaiTkWaiting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_NoidungTkWating"
                android:text="Loai" />

            <TextView
                android:id="@+id/tv_TrangthaiTkWaiting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_LoaiTkWaiting"
                android:text="Trang thai" />

            <TextView
                android:id="@+id/tv_NgaytaoTkWaiting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_TrangthaiTkWaiting"
                android:text="Ngay tao" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/viewTicketWaiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/eye" />

            <ImageView
                android:id="@+id/acceptTicketWaiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewTicketWaiting"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_done_all_black_24dp" />

            <ImageView
                android:id="@+id/removeTicketWaiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acceptTicketWaiting"
                android:layout_marginTop="5dp"
                android:src="@drawable/delete" />

        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>